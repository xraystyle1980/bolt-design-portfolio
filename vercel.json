{
  "headers": [
    {
      "source": "/sitemap-trice-2025.xml",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "application/xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/sitemap-trice-2025.xml",
      "dest": "/sitemap-trice-2025.xml"
    },
    {
      "src": "/robots.txt", 
      "dest": "/robots.txt"
    },
    {
      "src": "/favicon.(.*)",
      "dest": "/favicon.$1"
    },
    {
      "src": "/meta/(.*)",
      "dest": "/meta/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/models/(.*)",
      "dest": "/models/$1"
    },
    {
      "src": "/animations/(.*)",
      "dest": "/animations/$1"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|mp4|glb|json))",
      "dest": "/$1"
    }
  ]
} 